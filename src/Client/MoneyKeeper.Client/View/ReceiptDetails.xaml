<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyKeeper.Client.View.ReceiptDetails"
             Title="ReceiptDetails" x:Name="control">
    <VerticalStackLayout BindingContext="{x:Reference control}">
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Info.Id}"
            VerticalOptions="Center" 
            HorizontalOptions="Center"/>
        <Label 
            Text="{Binding Info.ImageName}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            Text="{Binding Info.OcrDataGenerated}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
    </VerticalStackLayout>
</ContentPage>