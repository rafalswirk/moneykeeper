<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyKeeper.Client.View.ReceiptAnalysisPage"
             xmlns:controls="clr-namespace:MoneyKeeper.Client.UserControls"
             Title="ReceiptAnalysisPage">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to receipt analysis page!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <Label 
            x:Name="lblImage"/>
        <Button x:Name="btnStartAnalysis" Text="Start analysis" Clicked="btnStartAnalysis_Clicked"/>
        <ListView x:Name="lstSteps"/>
        <controls:AddNewCompanyView x:Name="ctrlAddCompany" IsVisible="false"/>
    </VerticalStackLayout>
</ContentPage>