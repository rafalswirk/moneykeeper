<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyKeeper.Client.View.TakePhotoView"
             Title="TakePhotoView" x:Name="page">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <Image x:Name="image" Grid.Row="0"/>
        <Grid Grid.Row="1" Margin="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0" BorderColor="Black" BorderWidth="1"
                x:Name="btnStore" 
                Text="Store"
                SemanticProperties.Hint="Just store receipt photo for further analysis"/>
            <Button Grid.Column="1"
                x:Name="btnAnalyse"
                Text="Analyse"
                SemanticProperties.Hint="Store and analyse receipt photo"/>
        </Grid>
        
    </Grid>
</ContentPage>