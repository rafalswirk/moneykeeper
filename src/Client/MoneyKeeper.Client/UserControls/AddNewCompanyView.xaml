<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MoneyKeeper.Client.UserControls.AddNewCompanyView">
    <VerticalStackLayout>
        <Label 
            Text="Welcome to .NET MAUI!"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />
        <StackLayout Spacing="10">
            <Label Text="Company name: "/>
            <Entry x:Name="entryCompanyName"/>
        </StackLayout>
        <StackLayout Spacing="10">
            <Label Text="TaxID: "/>
            <Entry x:Name="entryTaxId"/>
        </StackLayout>
        <StackLayout Spacing="10">
            <Button x:Name="btnSave" Text="Save" BackgroundColor="Green" Clicked="btnSave_Clicked"/>
            <Button x:Name="btnReject" Text="Reject" BackgroundColor="Red" Clicked="btnReject_Clicked"/>
        </StackLayout>
        <Picker x:Name="pickCategory"/>
    </VerticalStackLayout>
</ContentView>
